<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">

      <p id="notice"><%= notice %></p>
      
      <h1><%= @event.name %></h1>
      <div class="item-detail">
         
         <p>
          <strong>Description:</strong>
          <%= @event.description %>
        </p>

         <p>
          <strong>Date:</strong>
          <%= @event.date %>
        </p>

         <p>
          <strong>End Time:</strong>
          <%= @event.end %>
        </p>

         <p>
          <strong>Location:</strong>
          <%= @event.location %>
        </p>

         <p>
          <strong>Special Instructions:</strong>
          <%= @event.instructions %>
        </p>

        <p>
          <strong># Items Available:</strong>
          <%= @event.items.count %>
        </p>
      </div>

<% if false %>      
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Date</th>
            <th>End Time</th>
            <th>Location</th>
            <th>Instructions</th>
            <th>Items</th>
          </tr>
        </thead>

        <body>
          <tr>
            <td><%= @event.name %></td>
            <td><%= @event.description %></td>
            <td><%= @event.date %></td>
            <td><%= @event.end %></td>
            <td><%= @event.location %></td>
            <td><%= @event.instructions %></td>
            <td><%= @event.items.count %></td>
          </tr>
        </body>
      </table>
<% end %>
      </br>
      <h2>Items available at <%= @event.name %></h2>
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>Quantity remaining</th>
            <th>Instructions</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @my_items.each do |item| %>
            <tr>
              <td><%= item.name %></td>
              <td><%= item.item_category_id %></td>
              <td><%= item.description %></td>
              <td><%= item.quantity %></td>
              <td><%= item.quantity.to_i - item.quantity_requested.to_i %></td>
              <td><%= item.instructions %></td>
              <td><%= link_to 'View Details', event_item_path(@event, item) %></td>
              <td><%= link_to 'Edit', edit_event_item_path(@event, item) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <p><%= link_to 'New Item', new_event_item_path(@event) %></p>

      <%= link_to 'Edit', edit_event_path(@event) %> |
      <%= link_to 'Back', events_path %>
    </div>
  </div>
</div>
