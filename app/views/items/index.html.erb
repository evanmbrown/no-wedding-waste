<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">

      <h1>Listing items</h1>

      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>Category</th>
            <th>Description</th>
            <th>Quantity</th>
            <th>Quantity remaining</th>
            <th>Instructions</th>
            <th>Event</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.name %></td>
              <td><%= item.item_category_id %></td>
              <td><%= item.description %></td>
              <td><%= item.quantity %></td>
              <td><%= item.quantity.to_i - item.quantity_requested.to_i %></td>
              <td><%= item.instructions %></td>
              <td><%= item.event_id %></td>
              <td><%= link_to 'Show', event_item_path(@event, item) %></td>
              <td><%= link_to 'Edit', edit_event_item_path(@event, item) %></td>
              <td><%= link_to 'Destroy', event_item_path(@event, item), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Item', new_event_item_path %>
    
    </div>
  </div>
</div>
